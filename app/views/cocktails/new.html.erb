<div class="container">
  <div class="page-title-box">
    <h1>New cocktail</h1>
  </div>
  <div class="form-box">
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name, error: 'Please name your cocktail' %>
      <%= f.input :photo, as: :file, error: 'Please add a picture' %>
      <%= f.button :submit, class: "btn btn-info add-btn" %>
    <% end %>
  </div>
</div>
