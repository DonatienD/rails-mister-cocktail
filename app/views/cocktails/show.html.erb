<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <br>
  </div>
</div>

<div class="cocktail-content">
  <div class="ingredient-heading-card">
    <h3><em>Ingredients</em></h3>
  </div>



  <div class="ingredient-list-card">
    <div class="ingredient-list">
      <ul>
        <% @cocktail.ingredients.each do |ingredient| %>

          <% ingredient.doses.each do |dose| %>
            <% if dose.cocktail_id == @cocktail.id %>
              <li class="ingredient-list-item">
                <div class="ingredient-item-name">
                  <strong><%= ingredient.name.capitalize %></strong>
                </div>
                <div class="ingredient-item-description">
                  <span>â€”</span>
                  <%= dose.description %>
                </div>
                <div class="ingredient-item-icons">
                    <%= link_to(dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" }) do %>
                      <i class="fa fa-times" aria-hidden="true"></i>
                    <% end %>
                </div>
              </li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="add-ingredient-button">
      <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>
<br>
