<div class="container">
  <div class="page-title-box">
    <h3><em>Add an ingredient</em></h3>
  </div>

  <div class="form-box">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, error: 'Mandatory, please specify one'  %>
      <%= f.association :ingredient, error: 'Mandatory, please specify one' %>
      <%= f.button :submit, class: "btn btn-info add-btn" %>
    <% end %>
  </div>
</div>
