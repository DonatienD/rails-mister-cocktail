<div class="container">

<h3><em>Add an ingredient</em></h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description, error: 'Mandatory, please specify one'  %>
  <%= f.association :ingredient, error: 'Mandatory, please specify one' %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

</div>
